@model AquaG.TasksMVC.ViewModels.LoginModel
@{
    ViewData["Title"] = "Вход на сайт";
}
<h5>@ViewData["Title"]</h5>
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <table border="0">
            <tr>
                <td><label asp-for="Email">Введите Email</label></td>
                <td>
                    <input type="text" asp-for="Email" />
                    <span asp-validation-for="Email" />
                </td>
            </tr>
            <tr>
                <td><label asp-for="Password">Введите пароль</label></td>
                <td>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password" />
                </td>
            </tr>
            <tr>
                <td><label asp-for="RememberMe">Запомнить</label></td>
                <td><input asp-for="RememberMe" /></td>
            </tr>
            <tr>
                <td colspan="2" align="right"><input type="submit" value="Войти" class="btn btn-outline-dark" /></td>
            </tr>

        </table>

    </div>
    <input type="hidden" asp-for="ReturnUrl" />
</form>
<a asp-action="Register" asp-controller="Account">Регистрация</a>
