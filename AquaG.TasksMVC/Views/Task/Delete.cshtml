@model AquaG.TasksMVC.ViewModels.TaskModel

@{
    ViewData["Title"] = "Удаление";
}

<h5>Удалить задачу?</h5>
<div>
    <h5>TaskModel</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Caption)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsCompleted)
        </dd>
    </dl>
    
    <form asp-controller="Task" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
    <a asp-controller="Project" asp-action="Index" asp-route-id="@Model.ProjectId" >Обратно к списку</a>
</div>
