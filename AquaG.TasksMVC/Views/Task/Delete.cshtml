@model AquaG.TasksMVC.ViewModels.TaskModel

@{
    ViewData["Title"] = "Удаление";
}

<h5>Удалить задачу?</h5>
<div>
    <h5>TaskModel</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">@Model.Caption</dt>
        <dd class = "col-sm-10">@Model.Description</dd>
        <dd class = "col-sm-10">@Model.StartDate</dd>
        <dd class = "col-sm-10">@Model.EndDate</dd>
    </dl>
    
    <form asp-controller="Task" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
    <a asp-controller="Project" asp-action="Index" asp-route-id="@Model.ProjectId" >Обратно к списку</a>
</div>
