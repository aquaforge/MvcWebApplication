@model AquaG.TasksMVC.ViewModels.TaskModel

@{
    ViewData["Title"] = "Редактирование";
}

<h5>Редактирование задачи</h5>
<hr>

<div>
    <a asp-controller="Project" asp-action="Index" asp-route-id="@Model.ProjectId">Вернуться</a>
</div>

<div>
    <a asp-controller="Task" asp-action="Delete" asp-route-ProjectID="@Model.ProjectId" asp-route-id="@Model.Id">Удалить задачу</a>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Task" asp-action="Edit" asp-route-ProjectID="@Model.ProjectId" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ProjectId" />
            <div class="form-group">
                <label asp-for="Caption" class="control-label"></label>
                <input asp-for="Caption" class="form-control" />
                <span asp-validation-for="Caption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description"  class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input type="datetime" id="StartDate" name="StartDate"  class="form-control" 
                value="@Model.StartDate.ToHtmlForm()" placeholder="@DateTimeForCulture.HtmlFormDateTimeFormatString" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input type="datetime" id="EndDate" name="EndDate"  class="form-control" 
                value="@Model.EndDate.ToHtmlForm()" placeholder="@DateTimeForCulture.HtmlFormDateTimeFormatString" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsCompleted" class="control-label"></label>
                <input type="checkbox" asp-for="IsCompleted" class="form-control" />
                <span asp-validation-for="IsCompleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить"  />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
